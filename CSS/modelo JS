<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Perfis de Cachorros</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f1f1f1;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      max-width: 1000px;
      margin: auto;
    }

    .dog-card {
      background: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      text-align: center;
      cursor: pointer;
      transition: transform 0.2s;
    }

    .dog-card:hover {
      transform: scale(1.03);
    }

    .dog-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
    }

    .modal {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.6);
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }

    .modal-content {
      background: white;
      padding: 30px;
      border-radius: 10px;
      max-width: 400px;
      width: 90%;
      text-align: center;
      position: relative;
    }

    .close-btn {
      position: absolute;
      top: 10px;
      right: 15px;
      font-size: 20px;
      cursor: pointer;
    }
  </style>
</head>
<body>

<h1>Nossos Cachorros</h1>
<div class="container" id="dogContainer"></div>

<div class="modal" id="dogModal">
  <div class="modal-content">
    <span class="close-btn" onclick="closeModal()">&times;</span>
    <h2 id="modalName"></h2>
    <p id="modalAge"></p>
    <p id="modalDesc"></p>
  </div>
</div>

<script>
  const dogs = [
    {
      nome: "Rex",
      idade: "2 anos",
      descricao: "Rex é brincalhão e adora correr no parque.",
      imagem: "https://placedog.net/400/300?id=10"
    },
    {
      nome: "Luna",
      idade: "3 anos",
      descricao: "Luna é carinhosa e ama um colo.",
      imagem: "https://placedog.net/400/300?id=20"
    },
    {
      nome: "Bolt",
      idade: "1 ano",
      descricao: "Bolt é enérgico e adora brincar com outros cães.",
      imagem: "https://placedog.net/400/300?id=30"
    }
  ];

  const container = document.getElementById("dogContainer");
  const modal = document.getElementById("dogModal");
  const modalName = document.getElementById("modalName");
  const modalAge = document.getElementById("modalAge");
  const modalDesc = document.getElementById("modalDesc");

  dogs.forEach(dog => {
    const card = document.createElement("div");
    card.className = "dog-card";
    card.innerHTML = `
      <img src="${dog.imagem}" alt="${dog.nome}">
      <h3>${dog.nome}</h3>
      <p>${dog.idade}</p>
    `;
    card.addEventListener("click", () => openModal(dog));
    container.appendChild(card);
  });

  function openModal(dog) {
    modalName.textContent = dog.nome;
    modalAge.textContent = dog.idade;
    modalDesc.textContent = dog.descricao;
    modal.style.display = "flex";
  }

  function closeModal() {
    modal.style.display = "none";
  }

  // Fecha modal ao clicar fora
  window.onclick = function(e) {
    if (e.target === modal) {
      closeModal();
    }
  };
</script>

</body>
</html>
